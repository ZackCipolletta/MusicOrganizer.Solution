  @{
  Layout = "_Layout";
}
    @using MusicOrganizer.Models;

    <h1>Artists</h1>

    @if (@Model.Count == 0)
    {
      <h3>No artists have been added yet!</h3>
    } 

    @foreach (Artists artists in Model)
    {
      <h3><a href='/artists/@artists.Id'>@artists.ArtistName</a></h3>
    }

    <p><a href='/'>Back home</a></p>
